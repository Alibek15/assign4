<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="text-center">Quiz</h1>
        <div id="timer">
            Time remaining: <span id="time">00:00</span>
        </div>
        <form action="/submitQuiz" method="post" id="quizForm">
            <% questions.forEach(question => { %>
                <div class="question">
                    <p><%= question.text %></p>
                    <% question.answers.forEach(answer => { %>
                        <input type="radio" name="<%= question.id %>" value="<%= answer %>"> <%= answer %><br>
                    <% }) %>
                </div>
            <% }) %>
            <button type="submit" class="btn btn-primary">Submit Quiz</button>
        </form>
        <div class="social-share">
            <a href="#" class="btn btn-primary">Share on Facebook</a>
            <a href="#" class="btn btn-primary">Share on Twitter</a>
            <a href="#" class="btn btn-primary">Share on LinkedIn</a>
        </div>
    </div>
    <script src="/js/quiz.js"></script>
</body>
</html>